      <PackageReference Include="Unofficial.Microsoft.SQLServer.SMO.2014" Version="12.0.2000.8" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\C#\LibraryDialogForm\LibraryDialogForm\LibraryDialogForm.csproj" />
