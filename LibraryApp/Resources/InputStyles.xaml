<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontFamily" Value="Comic sans MS"/>
    </Style>
    <Style x:Key="textBoxPasswordBoxStyles">
        <Setter Property="TextBox.Foreground" Value="#FFF3E114"/>
        <Setter Property="TextBox.Background" Value="#FF238DEF"/>
        <Setter Property="TextBox.FontSize" Value="16"/>
        <Setter Property="TextBox.FontFamily" Value="Comic sans MS"/>
        <Setter Property="TextBox.VerticalContentAlignment" Value="Center"/>
        <Setter Property="TextBox.BorderThickness" Value="0 0 0 1"/>
        <Setter Property="TextBox.BorderBrush" Value="#FF17EF4C"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=textBoxPasswordBoxStyles}"/>
    <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource ResourceKey=textBoxPasswordBoxStyles}"/>
</ResourceDictionary>