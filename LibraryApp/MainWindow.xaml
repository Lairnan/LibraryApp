<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:LibraryApp"
    x:Class="LibraryApp.MainWindow"
    mc:Ignorable="d"
    Title="Школьная библиотека" 
    AllowsTransparency="True"
    WindowStyle="None"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner"
    WindowState="Normal"
    Icon="Images/LibraryIcon.png"
    Height="450"
    MinHeight="300"
    Width="800"
    MinWidth="600">
    
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    
    <!--
    AllowsTransparency="True"
    WindowStyle="None"
    -->
   
    <Window.Resources>
        <Style x:Key="BtnUp" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="3 0"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            Background="#4C37B1D4"
                            CornerRadius="5">
                            <ContentPresenter
                                HorizontalAlignment="Center">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect
                                        BlurRadius="3"
                                        Color="#FF2314aa"
                                        RenderingBias="Quality"
                                        ShadowDepth="2"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFE29E26"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF85E412"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Border
                CornerRadius="10"
                BorderBrush="Aqua"
                BorderThickness="3">
                <Border.Background>
                    <ImageBrush ImageSource="Images/Library.jpg"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <StackPanel 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image 
                                Margin="5 5"
                                MaxHeight="32"
                                MaxWidth="32"
                                Source="{TemplateBinding Icon}"/>
                            <TextBlock
                                Foreground="White"
                                Margin="5 5"
                                FontSize="18"
                                FontFamily="Comic sans MS"
                                Text="{TemplateBinding Title}"/>
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="5 5"
                            HorizontalAlignment="Right">
                            <Button
                                Style="{StaticResource BtnUp}"
                                Content="-"
                                Click="BtnMin"/>
                            <Button
                                Style="{StaticResource BtnUp}"
                                Content="-+"
                                Click="BtnMinMax"/>
                            <Button
                                Style="{StaticResource BtnUp}"
                                Content="X"
                                Click="BtnClose"/>
                        </StackPanel>
                    </Grid>
                    <ContentPresenter Grid.Row="1"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </Window.Template>
    <Grid>
        <!-- <Grid.Background> -->
        <!--     <ImageBrush ImageSource="Images/Library.jpg"/> -->
        <!-- </Grid.Background> -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button
            x:Name="BtnBack"
            Margin="5"
            Padding="5 2"
            FontSize="16"
            FontFamily="Comic sans MS"
            HorizontalAlignment="Left"
            Content="&lt;- Back"
            Click="BackBtnClick"/>
        <Frame
            x:Name="ThisPage"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
